<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Plugins">
    <description>Generally-applicable sniffs for WordPress plugins</description>

    <rule ref="WordPress-Core" />
    <rule ref="WordPress-Docs" />
    <rule ref="WordPress-Extra" />

    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>gulpfile.js</exclude-pattern>
    <exclude-pattern>webpack.config.js</exclude-pattern>
    <exclude-pattern>css/blocks.editor.css</exclude-pattern>
    <exclude-pattern>js/blocks/*</exclude-pattern>
    <exclude-pattern>js/src/*</exclude-pattern>
    <exclude-pattern>js/editor.blocks.js</exclude-pattern>
    <exclude-pattern>js/scripts.js</exclude-pattern>
</ruleset>